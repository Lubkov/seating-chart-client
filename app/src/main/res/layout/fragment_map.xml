<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="ua.stellar.seatingchart.MapFragment">

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/loadProgressBar"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="false"
        android:orientation="vertical"
        android:layout_alignParentBottom="false"
        android:layout_alignParentRight="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/paTotals">

        </LinearLayout>

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:weightSum="1">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="false"
                android:layout_alignParentStart="false"
                android:layout_above="@+id/buttonsLayout">

                <SearchView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/swOperation"
                    android:layout_alignTop="@+id/loadProgressBar"
                    android:layout_toStartOf="@+id/loadProgressBar"
                    android:visibility="invisible"
                    android:inputType="number" />

                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="143dp"
                    android:id="@+id/lwOperation"
                    android:layout_weight="0.87"
                    android:transcriptMode="alwaysScroll"

                    android:visibility="invisible" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="false"
                android:id="@+id/buttonsLayout"
                android:layout_above="@+id/twLayoutSize">

                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/pbBackgroundUpdate"
                    android:layout_gravity="left"
                    android:visibility="invisible" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Обновить"
                    android:id="@+id/buUpdate"
                    android:layout_marginBottom="12dp"
                    android:layout_gravity="right|top" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="0x0"
                android:id="@+id/twLayoutSize"
                android:layout_alignParentEnd="true"
                android:layout_gravity="right"
                android:layout_column="3"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true" />

            <ProgressBar
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/pbOperationLoad"
                android:layout_gravity="center"
                android:layout_centerInParent="true" />
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
