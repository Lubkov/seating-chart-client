<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout2"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

        <TextView
            android:id="@+id/tvGoodsName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Ресурс"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:paddingLeft="5dp"
            android:paddingRight="10dp">
        </TextView>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingTop="5dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="&lt;&lt;"
                android:id="@+id/buResourceBack"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="999"
                android:id="@+id/twResourceNum"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textSize="32dp"
                android:minWidth="60dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=">>"
                android:id="@+id/buResourceFoward"/>

        </LinearLayout>

        <ImageView
            android:layout_width="25dp"
            android:layout_height="18dp"
            android:id="@+id/ivStatus"
            android:layout_column="0"
            android:layout_margin="5dp"
            android:background="@color/colorBusy"
            android:layout_gravity="center_vertical" />

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|left"
            android:text="Статус"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:paddingLeft="10dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout3"
        android:paddingBottom="5dp"
        android:paddingTop="5dp">

    </LinearLayout>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:id="@+id/edState"
        android:baselineAligned="false">

    </RadioGroup>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Ресурс редактируется на другом устройстве"
        android:id="@+id/twReadOnly"
        android:textColor="#fe4242"
        android:visibility="invisible"
        android:layout_gravity="left" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pbUpdateLocked"
            android:layout_gravity="center_vertical|left"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/layoutButtons"
            android:paddingTop="10dp"
            android:gravity="center">

            <Button
                android:id="@+id/buttonYes"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:text="Сохранить"

                android:paddingLeft="10dp"
                android:paddingRight="10dp">
            </Button>

            <Button
                android:id="@+id/buttonCancel"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:text="Отмена"

                android:paddingLeft="10dp"
                android:paddingRight="10dp">
            </Button>

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>